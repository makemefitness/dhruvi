.recipe
  .gallery
    %figure.gallery__item
      = image_tag "app_layout/herbs-2.jpeg", alt: "logo", class: "gallery__photo"
    %figure.gallery__item
      = image_tag "app_layout/healthyfoods.jpg", alt: "logo", class: "gallery__photo"
    %figure.gallery__item
      = image_tag "app_layout/herbs.jpeg", alt: "logo", class: "gallery__photo"
  .recipe__header
    %h1.recipe__heading
      = @ingredient.name
    .recipe__nav
      - if params[:keywords].present?
        %svg.recipe__nav-icon
          %use{"xlink:href" => "#{asset_path('sprite.svg')}#icon-search"}
        = @ingredients.count
        results
    .recipe__summary
      %p
        %b= @count
        products
  .container

    %p
      %b Product:
      = @ingredient.name
    - if @ingredient.ingredient_category_id != nil
      %p= IngredientCategory.where(id: @ingredient.ingredient_category_id).first.name
    - else
      %p No category
    %p
      %b Kcal:
      = @ingredient.energy
    %p
      %b Protein:
      = @ingredient.protein
    %p
      %b Fat:
      = @ingredient.fat
    %p
      %b Carbohydrate:
      = @ingredient.carbohydrate

    = link_to 'Edytuj', edit_ingredient_path(@ingredient)
    \|
    = link_to 'Lista', ingredients_path