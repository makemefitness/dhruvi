= form_for @ingredient_category do |f|
  - if @ingredient_category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ingredient_category.errors.count, "error")} prohibited this ingredient_category from being saved:"
      %ul
        - @ingredient_category.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
