.recipe
  = render partial: 'partials/main_header'
  .recipe__header
    %h1.recipe__heading
      = @exercise.name
    .recipe__nav
  .row.align-items-center.p-5
    .col-md-6
      = image_tag(@exercise.gif, style: 'width:70%;') if @exercise.gif.attached?
    .col.align-items-center
      %h2= @exercise.name
      %br/
      %br/
      %p= @exercise.instructions
      %p
        %b Equipment:
        = @exercise.equipment.name
      %p.paragraph
        %b Body part:
        = @exercise.body_part.name
      %p.paragraph
        %b Target:
        = @exercise.target.name
      %h3 Exercises that target the same muscle group
      - @same_muscle_group.each do |exercise|
        = link_to exercise.name, exercise_path(exercise)
        |
      %h3 Exercises that use the same equipment
      - @same_equipment.each do |exercise|
        = link_to exercise.name, exercise_path(exercise)
        |
