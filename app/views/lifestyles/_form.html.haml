= form_for @lifestyle do |f|
  - if @lifestyle.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lifestyle.errors.count, "error")} prohibited this lifestyle from being saved:"
      %ul
        - @lifestyle.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
