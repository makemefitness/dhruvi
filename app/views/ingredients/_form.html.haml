= form_for @ingredient do |f|
  - if @ingredient.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ingredient.errors.count, "error")} prohibited this ingredient from being saved:"
      %ul
        - @ingredient.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :energy
    = f.number_field :energy
  .field
    = f.label :protein
    = f.number_field :protein
  .field
    = f.label :fat
    = f.number_field :fat
  .field
    = f.label :carbohydrate
    = f.number_field :carbohydrate
  .actions
    = f.submit 'Save'
