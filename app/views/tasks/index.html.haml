%h1 Listing tasks

%table
  %thead
    %tr
      %th Customer
      %th Exercise
      %th Date
      %th Time
      %th Is complete
      %th Marks
      %th
      %th
      %th

  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.customer
        %td= task.exercise
        %td= task.date
        %td= task.time
        %td= task.is_complete
        %td= task.marks
        %td= link_to 'Show', task
        %td= link_to 'Edit', edit_task_path(task)
        %td= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Task', new_task_path
